{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": false,
    "checkJs": true,
    "sourceMap": false
  },
  "include": ["lib/**/*.js"],
  "exclude": ["node_modules", "dist", "lib/**/*.spec.js"]
}
